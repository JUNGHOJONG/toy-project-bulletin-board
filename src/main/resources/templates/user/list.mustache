<!DOCTYPE html>
<html lang="kr">
<head>
    {{> include/header}}
</head>
<body>
<!-- 여기에 중복되는 네비게이션 삽입 -->
{{> include/navigation}}

<div class="container" id="main">
   <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
          <table class="table table-hover">
              <thead>
                <tr>
                    <th>#</th> <th>사용자 아이디</th> <th>이름</th> <th>이메일</th><th></th>
                </tr>
              </thead>
              <tbody>
              {{#users}}
                  <tr>
                      <th scope="row">{{id}}</th>
                      <td>{{userId}}</td>
                      <td>{{userName}}</td>
                      <td>{{email}}</td>
                      <td>
                          <form method="post" action="/users/{{id}}/delete">
                              <input type="hidden" name="_method" value="delete">
                              <button type="submit" class="btn btn-danger clearfix pull-right">삭제</button>
                          </form>
                          <a href="/users/{{id}}/updateForm" class="btn btn-success clearfix pull-right" role="button">수정</a>
                      </td>
                  </tr>
              {{/users}}
              </tbody>
          </table>
        </div>
    </div>
</div>

{{> include/footer}}

</body>
</html>